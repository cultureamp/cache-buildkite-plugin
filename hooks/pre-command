#!/bin/bash
set -euo pipefail

if [[ "${BUILDKITE_PLUGIN_CACHE_DEBUG:-false}" =~ (true|on|1) ]] ; then
  echo "--- :hammer: Enabling debug mode"
  set -x
fi

if [[ "${BUILDKITE_PLUGIN_CACHE_CACHE_KEY:-}" ]] ; then
  echo "No Cache Key to restore"
fi

echo "Restoring Cache: ${BUILDKITE_PLUGIN_CACHE_CACHE_KEY}"
